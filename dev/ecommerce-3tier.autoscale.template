      name: app_servers_decrement_01
      change: -1
      cooldown: 59
      type: webhook

  as_group_app_servers_inc_policy_01_inc_webhook_01:
    type: Rackspace::AutoScale::WebHook
    properties:
      policy: { get_resource: as_group_app_servers_inc_policy_01 }
      name: appservers_inc_webhook_01
