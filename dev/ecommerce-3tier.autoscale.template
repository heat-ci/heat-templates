                  chkconfig tomcat6 on
                  service tomcat6 start
          loadBalancers:
            -
              loadBalancerId: { get_resource: int_app_lb }
              port: 8080

  as_group_app_servers_inc_policy_01:
    type: Rackspace::AutoScale::ScalingPolicy
